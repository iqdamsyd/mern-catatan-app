{
  "name": "mern-catatan",
  "version": "1.0.0",
  "description": "Catatan is a free simple note web application that lets you manage your notes at ease.",
  "main": "index.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "export NODE_ENV=production && node src/server.js",
    "server": "export NODE_ENV=development && nodemon src/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },

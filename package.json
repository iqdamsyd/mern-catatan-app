{
  "name": "mern-catatan",
  "version": "1.0.0",
  "description": "Catatan is a free simple note web application that lets you manage your notes at ease.",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node src/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "cross-env NODE_ENV=test mocha --silent --timeout 10000",
    "server": "cross-env NODE_ENV=development nodemon src/server.js",
    "client": "npm start --prefix client2",
    "client-install": "npm install --prefix client"
  },
  "author": "Iqdam Musayyad R",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "http-errors": "^1.8.0",
    "http-status": "^1.5.0",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.8",
    "morgan": "^1.10.0",
    "redis": "^3.0.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cross-env": "^7.0.3",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6"
  }
}
